{% extends 'base2.html.twig' %}
{% block container2 %}

    <div class="breadcrumb-area gray-bg">
        <div class="container">
            <div class="breadcrumb-content">
                <ul>
                    <li><a href="index.html">Home</a></li>
                    <li class="active">My Account </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- my account start -->
    <div class="checkout-area pb-55 pt-75">
        <div class="container">
            <div class="row">
                <div class="ml-auto mr-auto col-lg-9">
                    <div class="checkout-wrapper">
                        <div id="faq" class="panel-group">
                            <form name="fos_user_profile_form" method="post" action="{{ path('fos_user_profile_edit') }}" class="fos_user_profile_edit">


                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h5 class="panel-title"><span>1</span> <a data-toggle="collapse" data-parent="#faq" href="#my-account-1">Edit your account information </a></h5>
                                </div>
                                <div id="my-account-1" class="panel-collapse collapse show">
                                    <div class="panel-body">
                                        <div class="billing-information-wrapper">
                                            <div class="account-info-wrapper">
                                                <h4>My Account Information</h4>
                                                <h5>Your Personal Details</h5>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-6 col-md-6">
                                                    {{ form_row(form.email) }}



                                                </div>
                                                <div class="col-lg-6 col-md-6">
                                                    {{ form_row(form.username) }}


                                                </div>
                                                <div class="col-lg-6 col-md-6">
                                                    {{ form_row(form.firstName) }}


                                                </div>
                                                <div class="col-lg-6 col-md-6">
                                                    {{ form_row(form.lastName) }}



                                                </div>
                                                <div class="col-lg-12 col-md-12">
                                                    {{ form_row(form.dateOfBirth) }}


                                                </div>
                                                <div class="col-lg-12 col-md-12">
                                                    {{ form_row(form.city) }}


                                                </div>
                                                <div class="col-lg-12 col-md-12">
                                                    {{ form_row(form.phone) }}



                                                </div>
                                                <div class="col-lg-12 col-md-12">
                                                    {{ form_row(form.current_password) }}
                                                    {{ form_row(form._token) }}



                                                </div>


                                            </div>
                                            <div class="billing-back-btn">
                                                <div class="billing-btn">
                                                    <button type="submit" value="Update" >Continue</button>
                                                </div>



                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            </form>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}