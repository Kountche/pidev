{% extends "base.html.twig" %}
{% block container  %}

    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Ecom-Dashboard</h4>
            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <a href="{{ path('evennement_back_search') }}" target="_blank" class="btn btn-danger pull-right m-l-20 btn-rounded btn-outline hidden-xs hidden-sm waves-effect waves-light">Search an event</a>
                <ol class="breadcrumb">
                    <li><a href="#">Dashboard</a></li>
                    <li class="active">Ecom-Dashboard</li>
                </ol>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <!-- row -->
        <div class="row">
            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                <div class="white-box">
                    <h3 class="box-title">Search un evennement</h3>
                    <div class="table-responsive">



                        <form  method='post'>



                            <div class="col-10">
                                <input class="form-control" type="text" name="note" id="example-text-input" placeholder="Search">
                            </div><br>



                            <center>
                                <div class="col-lg-2 col-sm-4 col-xs-12">
                                    <input type="submit" id="submit" value="Search" class="btn btn-block btn-outline btn-danger">
                                </div>
                            </center>

                        </form>



                    </div>
                </div>
            </div>
        </div>

        <!-- row -->
        <div class="row">
            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                <div class="white-box">
                    <h3 class="box-title">Liste des Ã©vennements</h3>
                    <div class="table-responsive">
                        <table class="table product-overview">
                            <thead>
                            <tr>
                                <th>Cover</th>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Date</th>
                                <th>Place</th>
                                <th>Type</th>
                                <th>Capacity</th>
                                <th>Availability</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for n in nb %}
                                <tr >


                                    <td><a href="{{ path('evennement_back_event',{'idEvent':n.Evennement}) }}"><img src="{{asset( n.photo )}}" width="80" ></a></td>
                                    <td>#{{ n.Evennement }}</td>
                                    <td>{{ n.nom }}</td>
                                    <td>{{ n.date|date('d-m-y') }}</td>
                                    <td>{{ n.lieux }}</td>
                                    <td>{{ n.type }}</td>
                                    <td>{{ n.nbPlace }}</td>
                                    <td>
                                        {% if n.nbPlace-n.id==0 %}
                                            <span class="label label-warning font-weight-100">Full</span>
                                        {% else %}
                                            <span class="label label-success font-weight-100">{{ n.nbPlace-n.id }}</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}




                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
