{% extends "base.html.twig" %}
{% block container  %}

    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Events</h4> </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">  <a href="{{ path('evennement_back_afficher') }}"  class="btn btn-danger pull-right m-l-20 btn-rounded btn-outline hidden-xs hidden-sm waves-effect waves-light">Show events</a>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="white-box">
                    <div class="">
                        <h2 style="color: #8f0000" class="m-b-0 m-t-0">{{ events.nom }}</h2> <small class="text-muted db">#{{ events.idEvent }}</small>
                        <hr>


                        <div class="row">
                            <div class="col-md-6">
                                <img src="{{asset( events.photo )}}" width="500" height="300" />

                            </div>





                            <div class="col-md-6">
                               <br/><br/> <h3 style="color: #1d5987">

                                    {% if events.date==events.dateFin %}
                                    <span style="color: #1d5987">On {{ events.date|date('d-m-y') }}</span>
                                    {% else %}
                                    <span style="color: #1d5987">From {{ events.date|date('d-m-y') }} to {{ events.dateFin|date('d-m-y') }}</span><br/>
                                    {% endif %}

                                    <span style="color: #1d5987">in {{ events.lieux }}</span></h3><br/><br/>
                                <h5><b>Type of event: </b><span style="color: #0A0A0A">{{ events.type }}</span></h5>
                                <h5><b>Capacity: </b><span style="color: #0A0A0A">{{ events.nbPlace }}</span></h5>
                               <div style="text-align: center"> {{ socialButtons() }}  </div>
                          <!--      <h5><b>Availability: </b><span style="color: #0A0A0A"></span></h5> -->
                            </div>

                        </div>

                        <h4 class="box-title m-t-40">Description of the event</h4>
                        <p>{{ events.description }}</p>


                        <div class="row">








                        </div>



                    </div>
                </div>
            </div>
        </div>
        <!--row -->
        <!-- .right-sidebar -->
        <div class="right-sidebar">
            <div class="slimscrollright">
                <div class="rpanel-title"> Service Panel <span><i class="ti-close right-side-toggle"></i></span> </div>
                <div class="r-panel-body">
                    <ul>
                        <li><b>Layout Options</b></li>
                        <li>
                            <div class="checkbox checkbox-info">
                                <input id="checkbox1" type="checkbox" class="fxhdr">
                                <label for="checkbox1"> Fix Header </label>
                            </div>
                        </li>
                        <li>
                            <div class="checkbox checkbox-warning">
                                <input id="checkbox2" type="checkbox" class="fxsdr">
                                <label for="checkbox2"> Fix Sidebar </label>
                            </div>
                        </li>
                        <li>
                            <div class="checkbox checkbox-success">
                                <input id="checkbox4" type="checkbox" class="open-close">
                                <label for="checkbox4"> Toggle Sidebar </label>
                            </div>
                        </li>
                    </ul>
                    <ul id="themecolors" class="m-t-20">
