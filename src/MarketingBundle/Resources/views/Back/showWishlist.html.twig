{% extends 'base.html.twig' %}

{% block container %}
    <ul >
        <li>
            <form role="search" class="app-search hidden-xs" method="post" action="{{ path('RechercheCoupon') }}">
                <input type="text" placeholder="Search..." class="form-control"name="motcle" id="search">
                <a href=""><i type="submit" class="fa fa-search"></i></a>
            </form>
        </li>
    </ul>






    <div class="row">
        <div class="col-lg-12">
            <div class="white-box">
                <h3 class="box-title m-b-0">Wishlist</h3>
                <p class="text-muted m-b-30 font-13"> Liste des wishlist </p>

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id client</th>
                            <th>Id</th>
                            <th>Product Name</th>
                            <th></th>
                            <th>Price</th>
                            <th  class="text-nowrap">Remove</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for  w in wishs %}
                            <tr>
                                <td>{{ w.iduser.id }}</td>
                                <td>{{ w.id}}</td>
                                <td>{{ w.product.name}}</td>
                                <td> <a href="{{ path('front_productdetail',{'id':w.product.id})}}"><div class="product-img"><img src="{{ asset('uploads/images/' ~ w.product.image ) }}"></div></td>
                                <td>{{ w.product.price }} TND</td>
                                <td><div class="text-nowrap"><a href="{{ path('deleteWishlist',{'id':w.id })}}" data-toggle="tooltip" data-original-title="Close"><i class="fa fa-close text-danger"></i> </a></div></td>
                            </tr>
                        {% endfor %}

                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}